{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["dom", "es2019", "scripthost"],
    "typeRoots": ["./node_modules/@types", "./@types"],
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "noImplicitThis": true
  },
  "include": ["src"]
}
