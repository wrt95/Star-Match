{
  "name": "ssr-app",
  "description": "Server-side Rendered App",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "// AUTO": "",
    "eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write src/ styles/ \"*.{js,json}\"",
    "test": "jest",
    "// DEV": "",
    "dev:server": "cross-env NODE_PATH=./src tsnd --respawn src/server/server.ts --ignore-watch node_modules,public,src/components/pages/index.ts",
    "dev:bundle": "webpack -w -d --env.dev",
    "// PROD": "",
    "prod:bundle": "cross-env NODE_ENV=production webpack --progress -p --env.prod",
    "prod:source": "rm -rf build && tsc --sourceMap false --skipLibCheck true",
    "prod:files": "copyfiles -u 1 -e \"src/**/*.ts\" -e \"src/**/*.tsx\" -e \"src/**/*.js\" \"src/**/*\"  build/",
    "prod:build": "yarn && yarn prod:source && yarn prod:files && yarn prod:bundle",
    "prod:start": "cross-env NODE_ENV=production NODE_PATH=./build pm2 start -i max build/server/server.js --exp-backoff-restart-delay=150 --update-env --name ssrApp",
    "prod:stop": "pm2 stop ssrApp",
    "prod:logs": "pm2 logs --update-env ssrApp",
    "prod:reload": "pm2 update && pm2 reload --update-env ssrApp && yarn prod:logs"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "autoprefixer": "^9.7.6",
    "body-parser": "^1.19.0",
    "cookie-session": "^1.4.0",
    "copyfiles": "^2.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.2",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.3",
    "helmet": "^3.22.0",
    "html-webpack-inline-source-plugin": "^0.0.10",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^25.3.0",
    "lodash.merge": "^4.6.2",
    "lzutf8": "^0.5.5",
    "mini-css-extract-plugin": "^0.9.0",
    "pm2": "^4.3.0",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "regenerator-runtime": "^0.13.5",
    "serialize-javascript": "^3.0.0",
    "tailwindcss": "^1.2.0",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "ts-polyfill": "^3.8.2",
    "typescript": "^3.8.3",
    "typesync": "^0.6.1",
    "webpack": "^4.42.1",
    "webpack-chunk-hash": "^0.6.0",
    "webpack-cli": "^3.3.11",
    "winston": "^3.2.1"
  },
  "engines": {
    "node": ">12"
  }
}
